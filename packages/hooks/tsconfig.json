{
  "extends": [
    // "@tsconfig/strictest/tsconfig",
    "@tsconfig/esm/tsconfig"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}